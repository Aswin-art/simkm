generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  umkm
  admin
}

model User {
  id        String    @id @default(cuid())
  name      String
  email     String    @unique
  password  String
  phone     String
  address   String
  role      Role
  products  Product[]
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
}

model Product {
  id                  String   @id @default(cuid())
  userId              String
  user                User     @relation(fields: [userId], references: [id])
  name                String
  description         String
  price               Decimal
  rawMaterialCost     Decimal  @map("raw_material_cost")
  laborCost           Decimal  @map("labor_cost")
  overheadCost        Decimal  @map("overhead_cost")
  totalCost           Decimal  @map("total_cost")
  unitProduced        Int      @map("unit_produced")
  hppPerUnit          Decimal  @map("hpp_per_unit")
  fixedCost           Decimal  @map("fixed_cost")
  variableCostPerUnit Decimal  @map("variable_cost_per_unit")
  pricePerUnit        Decimal  @map("price_per_unit")
  profitMargin        Decimal  @map("profit_margin")
  bepUnit             Decimal  @map("bep_unit")
  sales               Sale[]
  createdAt           DateTime @default(now()) @map("created_at")
  updatedAt           DateTime @updatedAt @map("updated_at")
}

model Sale {
  id         String   @id @default(cuid())
  productId  String
  product    Product  @relation(fields: [productId], references: [id])
  date       DateTime
  quantity   Int
  totalPrice Decimal  @map("total_price")
  createdAt  DateTime @default(now()) @map("created_at")
}
